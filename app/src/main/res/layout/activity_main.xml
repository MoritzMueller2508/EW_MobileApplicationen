<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005589">
    <RelativeLayout
        android:id="@+id/relativeLayout_MapAdvice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.409">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:columnCount="1"
            android:rowCount="6">

            <androidx.cardview.widget.CardView
                android:layout_width="159dp"
                android:layout_height="25dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#77a5b3"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/willkommen"
                    style="@style/Welcome2"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="297dp"
                    android:layout_marginRight="297dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/Willkommen"
                    app:layout_constraintBottom_toTopOf="@+id/tx_einleitung"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.73" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#77a5b3"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/tx_einleitung"
                    style="@style/Introduction"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/Introduction"
                    app:layout_constraintBottom_toTopOf="@+id/tx_hint"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/willkommen"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="420dp"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#77a5b3"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/schutzmaÃŸnahmen"
                    android:layout_width="wrap_content"
                    android:layout_height="460dp"
                    android:onClick="imageClick"
                    app:layout_constraintVertical_bias="0.9"
                    app:srcCompat="@drawable/schutzmasnahmen" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#77a5b3"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="90dp"
                    android:gravity="center"
                    android:text="Quelle: Deutsche Gesetzliche Unfallversicherung" />
            </androidx.cardview.widget.CardView>

        </GridLayout>


    </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>